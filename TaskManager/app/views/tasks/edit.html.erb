<h1>Editing task</h1>
 
<%= form_for :tasks, url: task_path(@tasks), method: :patch do |f| %>

  <p>
    <%= f.label :user %><br>
    <%= f.text_field :user %>
  </p>
 
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', tasks_path %>